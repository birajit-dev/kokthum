  {{!-- Tripura News & Article --}}
  <section class="news-latest-posts" style="margin-top: 30px;">
    <div class="container" style="max-width: 1130px;">
      <div class="row">
        
        
        <div class="col-lg-8 col-md-12 order-lg-8">
          <div class="section-title">
            <h2 class="mb-0"><i class="fa-solid fa-bolt-lightning" style="color: #032a63;font-size:20px"></i>Tripura News</h2> </div>

          {{#each oneDay}}
          <div class="blog-post post-style-04 mt-4">
            <div class="blog-image"> <img class="img-fluid" src="{{post_image}}" alt=""> </div>
            <div class="blog-post-details"> 
              <h6 class="blog-title"><a href="/{{post_category}}/{{post_url}}">{{post_name}}</a></h6>
              
              <div class="blog-post-meta">
                <div class="blog-post-time" style="font-size:12px"> <a href="/{{post_category}}/{{post_url}}"><i class="fa-solid fa-calendar-days"></i>{{substr "16" update_date}}</a> </div>
              </div>

            </div>
          </div>
           {{/each}}

          {{#if topheadlines}}
              {{#each topheadlines}} 
          <div class="blog-post post-style-04 mt-4">
            <div class="blog-image"> <img class="img-fluid" src="{{post_image}}" alt=""> </div>
            <div class="blog-post-details"> 
              <h6 class="blog-title"><a href="/{{post_category}}/{{post_url}}">{{post_name}}</a></h6>
              
              <div class="blog-post-meta">
                <div class="blog-post-time" style="font-size:12px"> <a href="/{{post_category}}/{{post_url}}"><i class="fa-solid fa-calendar-days"></i>{{substr "16" update_date}}</a> </div>
              </div>

            </div>
          </div>
           {{/each}}
                    {{else}}
                        <h1>Not Found</h1>
                    {{/if}}
        </div>


        <div class="col-lg-4 col-md-12 order-lg-4">
          <div class="section-title">
            <h2 class="mb-0"><i class="fa-solid fa-bolt-lightning" style="color: #032a63;font-size:20px"></i>Recent News</h2>
          </div>
          
          {{#each recentNewscat}}
          <div class="col mb-2" onclick="window.location.href = '/{{post_category}}/{{post_url}}'">
            <div class="card shadow-sm">
              <img class="bd-placeholder-ing card-img-top" src="{{post_image}}" style="height: 200px;">
              <div class="card-body" style="padding:10px;">
                <h6 class="card-text" style="font-size: 15px;">{{post_name}}</h6>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted"></small>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
      </div>
    </div>
  </section>
  {{!-- End of Tripura News & Article --}}






