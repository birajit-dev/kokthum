    <section class="space-ptb" style="padding: 10px;">
      <div class="container" style="max-width: 1130px;">
        <div class="row">


          <div class="col-lg-7 col-xl-8 blog-single" style="background:white;">
            <div class="blog-post-info">
              <div class="blog-content pb-0">
               
                <div class="blog-post-title">
                  <h3 class="mb-0" style="font-family:'PT Serif'">{{singlenews.post_name}}</h3>
                </div>
                <div class="blog-post post-style-07 border-0 py-4 px-0">
                  <div class="blog-post-details">
                    <div class="blog-post-meta p-0">
                      <div class="blog-post-user">
                        <a href="#" style="font-family:'PT Serif';"> 
                          {{#ifEquals singlenews.post_category "article"}}
                              {{else}}
                              By {{singlenews.author}}
                          {{/ifEquals}}

                          </a>
                      </div>
                      <div class="blog-post-time">
                        <a href="#" style="font-family:'PT Serif';"><i class="fa-solid fa-calendar-days"></i>{{substr "12" singlenews.update_date}}</a>
                      </div>
                    </div>
                  </div>
                </div>
                 <div class="blog-post-image mb-4">
                  <img class="img-fluid" src="{{singlenews.post_image}}" alt="">
                </div>
                
                <div class="singlenews" style="text-align: justify;font-family:'PT Serif';font-size:18px;color:black">
                        {{{singlenews.post_summary}}}
                        <br>
                        {{{singlenews.post_content}}}
                </div>                
                
                
                
                
                
                
                <div class="bg-white mb-4 mt-4">
                  <h6 class="widget-title text-uppercase fw-bolder">Leave a Reply</h6>
                  <div class="blog-sidebar-post-divider mb-4">
                  </div>
                  <form class="row">
                    <div class="col-lg-4 mb-3">
                      <input type="text" class="form-control" placeholder="Name">
                    </div>
                    <div class="col-lg-4 mb-3">
                      <input type="text" class="form-control" placeholder="Email">
                    </div>
                    <div class="col-lg-4 mb-3">
                      <input type="text" class="form-control" placeholder="Web">
                    </div>
                    <div class="col-lg-12 mb-3">
                      <textarea class="form-control" rows="3" placeholder="Comment"></textarea>
                    </div>
                    <div class="col-lg-12 mb-3">
                      <a class="btn btn-primary" href="#">Post comment</a>
                    </div>
                  </form>
                </div>
                
              </div>
            </div>
          </div>





          <div class="col-lg-5 col-xl-4">

            <div class="col mb-2" style="background-color:white;border-radius:10px;">
          <div class="col-lg-12">
            <div class="section-title" style="padding:8px;margin-bottom: -2px;">
              <h6 class="mb-0" style="color:black;font-weight:900;font-size:20px;font-family:'Lato Black',sans-serif">Related News</h6> 
              
              
              <a href="/recommended-for-you" onclick="gaFireRhsWidgetViewAll('/recommended-for-you','rfu_widget_rhs',false,this); goUrlCollectionWebGApoc('/recommended-for-you','0','rfu_widget_rhs','','');" class="rightLink" style="float: right;
        width: 9px;
        height: 14px;
        background: url('https://www.livemint.com/lm-img/dev/rightBlock.svg') no-repeat 0 0;"></a>
              </div>
          </div>
          {{#each relatedNews}}
          <div class="blog-post post-style-04" style="display:flex;padding:5px;border-bottom:1px solid #d1d8e6;margin-bottom:5px">
            <div class="blog-image" style="min-width:70px;width:0%;margin-right:10px"> <img class="img-fluid bg-overlay-black-93" src="{{post_image}}" alt="" style="width:70px;height:70px"> </div>
            <div class="blog-post-details"> 
              <h6 class="blog-title" style="color:black;font-size:15px;font-family:'Lato,sans-serif'"><a href="/{{post_category}}/{{post_url}}">{{post_name}}</a></h6>
              <div class="blog-post-meta">
                <div class="blog-post-time" style="font-size: 12px;margin-top:-8px;font-family:'Lato,sans-serif'"> <a href="/{{post_category}}/{{post_url}}">{{substr "12" update_date}}</a> </div>
              </div>
            </div>
          </div>
          {{/each}}        

      </div>
            
            
            
              
              <div class="widget">
                <h6 class="widget-title">Newsletter</h6>
                <div class="newsletter">
                  <i class="fa-solid fa-envelope-open-text"></i>
                  <p>Subscribe For Northeast Herald News And Receive Daily Updates</p>
                  <div class="newsletter-box">
                    <input type="email" class="form-control" placeholder="E-Mail Address">
                  <button type="submit" class="btn btn-primary">Subscribe Now</button>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </section>
